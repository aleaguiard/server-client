package servidor;

import pelicula.GestorPeliculas;
import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.io.PrintStream;
import java.net.Socket;

public class ClienteHandler implements Runnable {
    private Socket socket;
    private GestorPeliculas gestorPeliculas;

    public ClienteHandler(Socket socket) {
        this.socket = socket;
    }

    @Override
    public void run() {
        try {
            BufferedReader entrada = new BufferedReader(new InputStreamReader(socket.getInputStream()));
            PrintStream salida = new PrintStream(socket.getOutputStream());

            // Espera a que el cliente envíe una solicitud
            String solicitud = entrada.readLine();

            // Procesa la solicitud y envía una respuesta
            String respuesta = procesarSolicitud(solicitud);
            salida.println(respuesta);

            socket.close();
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private String procesarSolicitud(String solicitud) {
        // Aquí debes implementar la lógica para procesar la solicitud
        // Puedes utilizar el gestorPeliculas para buscar películas, agregar películas, etc.
        // La respuesta se devuelve como un String
        return "Respuesta del servidor";
    }
}
